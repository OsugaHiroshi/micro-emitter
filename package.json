{
  "name": "micro-emitter",
  "version": "1.1.0",
  "description": "micro event emitter in es6.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "babel src --out-dir lib --source-maps-inline",
    "build:client": "npm run build && browserify lib/index.js -o micro-emitter.js",
    "watch": "babel src --out-dir lib --watch --source-maps-inline",
    "lint": "eslint ./src --ext=js",
    "test": "mocha --compilers js:espower-babel/guess test/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khirayama/micro-emitter.git"
  },
  "eslintConfig": {
    "extends": "airbnb"
  },
  "keywords": [
    "eventemitter",
    "emitter",
    "event",
    "events",
    "browser",
    "flux"
  ],
  "author": "khirayama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khirayama/micro-emitter/issues"
  },
  "homepage": "https://github.com/khirayama/micro-emitter#readme",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "browserify": "^12.0.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.0.0",
    "espower-babel": "^3.3.0",
    "mocha": "^2.3.3",
    "power-assert": "^1.1.0"
  }
}
